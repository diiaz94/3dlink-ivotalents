<resources>
    <style name="ProgressBarStyle" parent="@android:style/Widget.ProgressBar.Horizontal"/>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="FacebookLoginButton">
        <item name="android:background">@drawable/facebook_login</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="AppTheme.CustomTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>

    </style>

    <style name="AppTheme.CustomThemeTranslucent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowCloseOnTouchOutside">true</item>

    </style>

    <style name="Autocomplete" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:colorFocusedHighlight">@color/ivo_green</item>
        <item name="android:textColorHintInverse">@color/ivo_green</item>
        <item name="colorControlNormal">@color/ivo_green</item>
        <item name="colorControlActivated">@color/ivo_green</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/ivo_green</item>
    </style>
    <style name="TextAppearence.App.TextInputLayoutArtist" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/ivo_orange</item>
    </style>
    <style name="CreateMessageEditText" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:colorFocusedHighlight">@color/ivo_green</item>
        <item name="android:textColorHintInverse">@color/ivo_green</item>
        <item name="colorControlNormal">@color/transparent</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="colorControlActivated">@color/transparent</item>
        <item name="android:colorActivatedHighlight">@color/transparent</item>


    </style>
    <style name="EditProfileArtist" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:colorFocusedHighlight">@color/ivo_orange</item>
        <item name="android:textColorHintInverse">@color/ivo_orange</item>
        <item name="colorControlNormal">@color/ivo_orange</item>
        <item name="colorControlActivated">@color/ivo_orange</item>
    </style>
    <style name="EditProfileIndustry" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:colorFocusedHighlight">@color/ivo_blue</item>
        <item name="android:textColorHintInverse">@color/ivo_blue</item>
        <item name="colorControlNormal">@color/ivo_blue</item>
        <item name="colorControlActivated">@color/ivo_blue</item>
    </style>
    <style name="EditProfileProvider" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:colorFocusedHighlight">@color/ivo_pink</item>
        <item name="android:textColorHintInverse">@color/ivo_pink</item>
        <item name="colorControlNormal">@color/ivo_pink</item>
        <item name="colorControlActivated">@color/ivo_pink</item>
    </style>
    <style name="AdvancedSearchCheckbox" parent="Theme.AppCompat.Light">
    <item name="colorControlNormal">@color/white</item>
    <item name="android:colorBackground">@color/white</item>
    <item name="colorControlActivated">@color/ivo_orange</item>
    </style>
    <style name="AdvancedSearchRadio" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorControlActivated">@color/ivo_orange</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">200dp</item>
        <item name="tabIndicatorColor">@color/ivo_green</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabBackground">@color/ivo_green</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="ThemeFullscreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
