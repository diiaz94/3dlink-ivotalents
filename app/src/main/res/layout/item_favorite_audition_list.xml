<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ivo_line_gray"
        android:layout_marginBottom="5dp"></FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.45">
            <ImageView
                android:id="@+id/casting_image"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@color/ivo_gray_dark"
                android:scaleType="centerCrop"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="0.55"
            android:layout_marginLeft="5dp">
            <TextView
                android:id="@+id/casting_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ivo_green_dark"
                android:text="MUSICA"
                android:textStyle="normal"
                android:tag="normal"
                android:textSize="10sp"
                android:padding="3dp"
                android:background="@color/black"/>
            <TextView
                android:id="@+id/rol_entity_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Catherine Lewis"
                android:textStyle="bold"
                android:tag="bold"
                android:textSize="10sp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/rol_entity_abilitie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Catherine Lewis"
                android:textStyle="normal"
                android:tag="normal"
                android:textSize="10sp"
                android:layout_marginTop="0dp"/>
            <Button
                android:id="@+id/casting_btn_detail"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/see_audition_text"
                android:textColor="@color/ivo_green_dark"
                android:textSize="8dp"
                android:background="@drawable/border_green_dark_shape"
                android:layout_gravity="bottom"/>




        </LinearLayout>
    </LinearLayout>

</LinearLayout>