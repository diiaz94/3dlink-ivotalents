                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/recent_category_talent_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="MUSICA"
                        android:textStyle="normal"
                        android:tag="normal"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/ivo_orange"/>
                    <TextView
                        android:id="@+id/recent_name_talent_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Catherine Lewis"
                        android:textStyle="bold"
                        android:tag="bold"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:id="@+id/recent_talent_1"
