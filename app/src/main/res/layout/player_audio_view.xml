<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/record_reproductor"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/ivo_gray_grid"
        android:orientation="vertical"
        android:layout_marginBottom="1dp"
        android:visibility="visible">
        <LinearLayout android:id="@+id/container_filled_reproduced"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:orientation="horizontal">
            <LinearLayout android:id="@+id/filled_reproduced"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/ivo_green"
                android:layout_weight="0.0"
                android:orientation="horizontal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button android:id="@+id/play_record_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_play_recording"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>
            <Button android:id="@+id/pause_record_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_stop_record"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:visibility="gone"/>
            <TextView android:id="@+id/record_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del audio"
                android:textColor="@color/ivo_gray_dark"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:visibility="visible"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end|center">
                <TextView android:id="@+id/record_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="@color/ivo_gray_dark"
                    android:layout_marginRight="15dp"
                    android:gravity="end|right"
                    />
            </LinearLayout>


        </LinearLayout>






    </RelativeLayout>

</LinearLayout>