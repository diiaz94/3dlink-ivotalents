<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.threedlink.ivotalents.ProfileArtist">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@drawable/violin">
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="#fc4513">
                </FrameLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:background="@color/ivo_gray">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="30dp"
                            android:paddingLeft="20dp"
                            android:layout_weight="1">
                                <FrameLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="200dp">
                                        <TextView android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="SIGUE A ALEJANDRA"
                                            android:textSize="12sp"
                                            android:textColor="@color/black"
                                            android:id="@+id/follow_to_artist"/>
                                </FrameLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="200dp">

                                </FrameLayout>

                        </LinearLayout>

                </LinearLayout>
                <!-- Name Label -->
                <TextView
                    android:id="@+id/lblName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_marginTop="40dip"
                    android:layout_marginBottom="10dip"/>

                <!-- Email Label -->
                <TextView
                    android:id="@+id/lblEmail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dip"
                    android:layout_marginBottom="10dip"/>
        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    >

                        <ImageView
                            android:layout_width="65pt"
                            android:layout_height="65pt"
                            android:id="@+id/profile_photo"
                            android:src="@drawable/profile_photo"
                            android:layout_marginLeft="0dp"
                            android:layout_gravity="top|left" />
                        <LinearLayout android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="top|left"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">
                                <TextView android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="MÃšSICA"
                                    android:textSize="10sp"
                                    android:textColor="#fc4513"
                                    android:id="@+id/talent_name"
                                    android:background="#000000"
                                    android:padding="2dp"
                                    />
                                <TextView android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Alejandra Fernandez"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:textColor="#ffffff"
                                    android:id="@+id/artist_name"/>
                                <TextView android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Violinista"
                                    android:textStyle="normal"
                                    android:textSize="12sp"
                                    android:textColor="#ffffff"
                                    android:id="@+id/artist_talent"/>
                                <LinearLayout android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="8dp">
                                        <ImageView
                                            android:layout_width="8pt"
                                            android:layout_height="8pt"
                                            android:src="@drawable/corazon"
                                            android:layout_gravity="top|left" />
                                        <TextView android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="500 "
                                            android:textStyle="normal|bold"
                                            android:textSize="12sp"
                                            android:textColor="#ffffff"
                                            android:layout_marginLeft="5dp"
                                            android:id="@+id/artist_count_fans"/>
                                        <TextView android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="fans"
                                            android:textStyle="italic|bold"
                                            android:textSize="12sp"
                                            android:textColor="#ffffff"
                                            android:id="@+id/text_fans"/>
                                </LinearLayout>
                                <LinearLayout android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="5dp">
                                        <ImageView
                                            android:layout_width="8pt"
                                            android:layout_height="8pt"
                                            android:src="@drawable/fill_star"
                                            android:layout_gravity="top|left"
                                            android:layout_marginRight="1dp"/>
                                        <ImageView
                                            android:layout_width="8pt"
                                            android:layout_height="8pt"
                                            android:src="@drawable/fill_star"
                                            android:layout_gravity="top|left"
                                            android:layout_marginRight="1dp"/>
                                        <ImageView
                                            android:layout_width="8pt"
                                            android:layout_height="8pt"
                                            android:src="@drawable/fill_star"
                                            android:layout_gravity="top|left"
                                            android:layout_marginRight="1dp"/>
                                        <ImageView
                                            android:layout_width="8pt"
                                            android:layout_height="8pt"
                                            android:src="@drawable/fill_star"
                                            android:layout_gravity="top|left"
                                            android:layout_marginRight="1dp"/>
                                        <ImageView
                                            android:layout_width="8pt"
                                            android:layout_height="8pt"
                                            android:src="@drawable/fill_star"
                                            android:layout_gravity="top|left"
                                            android:layout_marginRight="1dp"/>
                                </LinearLayout>

                        </LinearLayout>
                </GridLayout>
        </FrameLayout>








        <Button
            android:id="@+id/logout_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/logout"

            />

    </RelativeLayout>
