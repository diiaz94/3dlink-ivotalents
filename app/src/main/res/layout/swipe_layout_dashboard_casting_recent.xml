<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:id="@+id/layout_dashboard_casting_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/recent_image_casting_1"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:src="@drawable/talent_1"
                        android:scaleType="fitXY"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:background="#8cd8006c"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/recent_category_casting_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="MUSICA"
                            android:textStyle="normal"
                            android:tag="normal"
                            android:textSize="12sp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"/>
                        <TextView
                            android:id="@+id/recent_title_casting_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="Catherine Lewis"
                            android:textStyle="bold"
                            android:tag="bold"
                            android:textSize="14sp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"/>

                        <Button
                            android:layout_width="60dp"
                            android:layout_height="15dp"
                            android:text="LEER MÃS"
                            android:textColor="@color/white"
                            android:textSize="8sp"
                            android:id="@+id/button_ver_casting"
                            android:background="@drawable/border_white_shape"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:tag="normal"

                            />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/recent_talent_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Catherine Lewis"
                        android:textStyle="normal"
                        android:tag="normal"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_talents_dashboard_casting_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/recent_image_talent_2"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:src="@drawable/talent_2"
                    android:scaleType="fitXY"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/recent_category_talent_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="MUSICA"
                        android:textStyle="normal"
                        android:tag="normal"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/ivo_orange"/>
                    <TextView
                        android:id="@+id/recent_name_talent_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Catherine Lewis"
                        android:textStyle="bold"
                        android:tag="bold"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:id="@+id/recent_talent_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Catherine Lewis"
                        android:textStyle="normal"
                        android:tag="normal"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center"
        android:layout_marginTop="10dp">
