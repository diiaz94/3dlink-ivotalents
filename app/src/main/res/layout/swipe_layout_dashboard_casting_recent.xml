                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Catherine Lewis"
                        android:textStyle="normal"
                        android:tag="normal"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>




</LinearLayout>